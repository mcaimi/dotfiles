[module/powermenu]
type = custom/menu
expand-right = true
format-spacing = 1
format-background = ${colors.blue}
label-open = "  "
label-open-foreground = ${colors.primary}
label-close = "  cancel"
label-close-foreground = ${colors.red}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = shut down
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = systemctl reboot

menu-2-0 = shut down
menu-2-0-exec = systemctl shutdown
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/xbacklight]
type = internal/xbacklight
format-prefix = " "
format-background = ${colors.blue}
label = "%percentage%% "

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.black}
format-background = ${colors.blue}
format-underline = #f90000
label = "%percentage%% "

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.black}
format-background = ${colors.blue}
format-underline = #4bffdc
label = "%percentage_used%% "

[module/date]
type = internal/date
interval = 5

date = " %A %d %b %Y"
date-alt = " %d-%m-%Y"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = " "
format-prefix-foreground = ${colors.black}
format-underline = #0a6cf5
format-background = ${colors.blue}

label = "%time% %date%  "

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging-background = ${colors.blue}
format-charging = "<animation-charging> <label-charging> "
format-charging-underline = #ffb52a

format-discharging = "<ramp-capacity> <label-discharging> "
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.black}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-foreground = ${colors.black}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-foreground = ${colors.black}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = "<ramp> <label> "
format-background = ${colors.blue}
format-underline = #f50a4d
format-warn = "<ramp> <label-warn> "
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.black}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.black}

[module/uptime]
type = custom/script
exec = uptime|awk '{print $2 " " $3 " " $4 " " $5 " " $6}'|cut -d ',' -f -2
interval = 5
format-prefix=" "
format-prefix-foreground = ${colors.primary}
format-foreground = ${colors.secondary}


