;; SYSTEMD POWER MENU MODULE
[module/powermenu]
type = custom/menu

label-close = "    "
label-open = " ⏻ "

;; LOGOUT FROM CURRENT SESSION
menu-0-0 = "  LOGOUT  /"
menu-0-0-exec = "i3-msg exit"

;; RESTART SYSTEM
menu-0-1 = "  RESTART  /"
menu-0-1-exec = "systemctl reboot"

;; SHUTDOWN SYSTEM
menu-0-2 = "  SHUTDOWN  "
menu-0-2-exec = "systemctl poweroff"

;; custom widget colors
pm-cbg = ${settings/colors.transparent}
pm-cfg = ${settings/colors.white}
pm-obg = ${settings/colors.transparent}
pm-ofg = ${settings/colors.white}

label-close-background = ${self.pm-cbg}
label-close-foreground = ${self.pm-cfg}
label-open-background = ${self.pm-obg}
label-open-foreground = ${self.pm-ofg}

;menu-0-0-background = ${settings/colors.label-background}
menu-0-0-foreground = ${self.label-open-foreground}
;menu-0-1-background = ${settings/colors.label-background}
menu-0-1-foreground = ${self.label-open-foreground}
;menu-0-2-background = ${settings/colors.label-background}
menu-0-2-foreground = ${self.label-open-foreground}
