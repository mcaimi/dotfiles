;; i3 WM CONTROLLER MODULE
[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = false

format = " <label-state> <label-mode> "
format-prefix = " %{T6}i3wm %{T-}"

label-focused = "  %index% "
label-unfocused = "  %index%  "
label-urgent = "  %index% "

;; custom widget colors
i3-format-prefix-foreground = ${settings/colors.black}
i3-format-prefix-background = ${settings/colors.darkcyan}

i3-label-focused-foreground = ${settings/colors.black}
i3-label-focused-background = ${settings/colors.yellow}

i3-label-unfocused-foreground = ${settings/colors.black}
i3-label-unfocused-background = ${settings/colors.cyan}

i3-label-urgent-foreground = ${settings/colors.black}
i3-label-urgent-background = ${settings/colors.red}

;; color config
format-foreground = ${settings/colors.foreground}
format-prefix-background = ${self.i3-format-prefix-background}
format-prefix-foreground = ${self.i3-format-prefix-foreground}
label-focused-foreground = ${self.i3-label-focused-foreground}
label-focused-background = ${self.i3-label-focused-background}
label-unfocused-foreground = ${self.i3-label-unfocused-foreground}
label-unfocused-background = ${self.i3-label-unfocused-background}
label-urgent-background = ${self.i3-label-urgent-background}
label-urgent-foreground = ${self.i3-label-urgent-foreground}
;label-separator-background = ${settings/colors.label-background}
:label-separator-foreground = ${settings/colors.i3-separator}
