;; PULSEAUDIO CONTROLLER MODOULE

[module/pulseaudio]
type = internal/pulseaudio
interval = 5
use-ui-max = false

;; AUDIO ON SETTINGS
format-volume = " <bar-volume> <label-volume> "
format-volume-background = ${settings/colors.cyan}
format-volume-prefix = "  "
format-volume-prefix-foreground = ${settings/colors.black}
format-volume-prefix-background = ${settings/colors.yellow}
label-volume-foreground = ${settings/colors.black}

;; AUDIO MUTED SETTINGS
label-muted = " Audio Muted "
label-muted-foreground = ${settings/colors.black}
label-muted-background = ${settings/colors.cyan}
format-muted-prefix = "  "
format-muted-prefix-foreground = ${settings/colors.black}
format-muted-prefix-background = ${settings/colors.red}

;; VOLUME SLIDER
bar-volume-width = 10
bar-volume-gradient = true
bar-volume-indicator = >
bar-volume-indicator-font = 0
bar-volume-indicator-foreground = ${settings/colors.black}
bar-volume-fill = "="
bar-volume-fill-font = 0
bar-volume-fill-foreground = ${settings/colors.black}
bar-volume-empty = -
bar-volume-empty-font = 0
bar-volume-empty-foreground = ${settings/colors.black}
bar-volume-background = ${settings/colors.cyan}
