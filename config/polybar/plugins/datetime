;; DATE AND TIME MODULES
[module/date]
type = internal/date
interval = 5

format-prefix = "  "
format-prefix-foreground = ${settings/colors.black}
format-prefix-background = ${settings/colors.yellow}

date = " %a %m/%d/%y "
label = "%date%"
label-foreground = ${settings/colors.black}
label-background = ${settings/colors.cyan}

[module/time]
type = internal/date
interval = 5
;; 12 hour time: " %l:%M %p ", 24 hour time: " %H:%M "

format-prefix = "  "
format-prefix-foreground = ${settings/colors.black}
format-prefix-background = ${settings/colors.yellow}

time = " %H:%M "
label = "%time%"
label-foreground = ${settings/colors.black}
label-background = ${settings/colors.cyan}

