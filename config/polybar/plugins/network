;; NETWORKING MODULES (WIFI, ETHERNET, VPN TUNNELS)

[module/public-ip]
type = custom/script
interval = 30
format = " <label> "
format-prefix-foreground = ${colors.black}
format-prefix-background = ${settings/colors.yellow}
exec = echo "$(curl --limit-rate 1k -s https://ifcfg.me)" || echo ""

[module/hostname]
type = custom/script
interval = 256
format = " <label> "
format-prefix = " "
format-prefix-foreground = ${colors.black}
format-prefix-background =${colors.yellow}
exec = echo "$(uname -n)"

[module/wlan]
type = internal/network
interface = wireless0
interval = 3.0
format-connected = "%{T6} <ramp-signal> %{T-}<label-connected> "
format-connected-foreground = ${settings/colors.white}
format-connected-background = ${settings/colors.transparent}
label-connected = "%essid% %{F#aca074}%signal%% %{F-}(%local_ip%)"
label-connected-foreground = ${settings/colors.white}
label-connected-background = ${settings/colors.transparent}
format-disconnected =
label-disconnected =

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${settings/colors.secondary}

[module/eth]
type = internal/network
interface = ethernet0
interval = 3.0

format-connected-prefix = "%{T6}  %{T-}"
format-connected-prefix-foreground = ${settings/colors.white}
format-connected-prefix-background = ${settings/colors.transparent}
label-connected = %local_ip%
format-disconnected =
label-disconnected =

[module/protonvpn]
type = internal/network
interface = tun0
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${settings/colors.white}
format-connected-prefix-background = ${settings/colors.transparent}
label-connected = " PROTONVPN UP "
label-connected-foreground = ${settings/colors.white}
label-connected-background = ${settings/colors.transparent}
format-disconnected =
label-disconnected =


