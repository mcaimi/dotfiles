[settings]
include-file = ~/.config/polybar/themes/gruvbox
screenchange-reload = true
compositing-background = source
compositing-foreground = over
compositing-overline = over
compositing-underline = over
compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0

[spacing]
padding = 1
margin = 2

include-file = ~/.config/polybar/bars/default-ext

include-file = ~/.config/polybar/plugins/i3

; include-file = ~/.config/polybar/plugins/new-workspace

[module/xwindow]
type = internal/xwindow

format-padding = ${spacing.padding}
format-prefix = "    "
format-prefix-font = 4
format-prefix-margin-left = ${spacing.padding}

label = "  %title%  "
label-maxlen = 200

format-prefix-background = ${settings/colors.xwindow}
format-prefix-foreground = ${settings/colors.title-foreground}
label-background = ${settings/colors.label-background}

include-file = ~/.config/polybar/plugins/mpd-default

include-file = ~/.config/polybar/plugins/volume-default

[module/date]
type = internal/date

date = " %a %m/%d "
interval = 5

format-padding = ${spacing.padding}
format-prefix = "    "

label = " %date% "

format-prefix-background = ${settings/colors.date}
format-prefix-foreground = ${settings/colors.title-foreground}
label-background = ${settings/colors.label-background}

[module/time]
type = internal/date

interval = 5
;;; 12 hour time: " %l:%M %p ", 24 hour time: " %H:%M "
time = " %H:%M "

format-padding = ${spacing.padding}
format-prefix = "    "

label = " %time% "
label-margin-right = ${spacing.padding}

format-prefix-background = ${settings/colors.time}
format-prefix-foreground = ${settings/colors.title-foreground}
label-background = ${settings/colors.label-background}

include-file = ~/.config/polybar/plugins/powermenu
